<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
<header class="bg-primary text-white">
  <nav class='d-flex justify-content-between p-2 align-item-center'>
     <a href='/'><i class="fa-solid fa-circle-arrow-left h2 text-white pt-2"></i></a>
    <h2 class='m-0 p-0'> REGISTER </h2>
    <%= f.submit "Next", class: "btn btn-primary-outline text-white" %>
  </nav>
</header>


  <%= render "devise/shared/error_messages", resource: resource %>
    <div class="field mt-3">
      <%= f.text_field :name, autofocus: true, autocomplete: "email", placeholder: "Full name", class: "form-control rounded-0" %>
     </div>

    <div class="field">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email", class: "form-control rounded-0" %>
    </div>

    <div class="field">
      <%= f.password_field :password, autocomplete: "new-password", placeholder: "Password", class: "form-control rounded-0" %>
    </div>

    <div class="field">
      <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Confirm password", class: "form-control rounded-0" %>
    </div>
  <%end%>
