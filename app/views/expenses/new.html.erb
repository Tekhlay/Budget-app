<%= form_for @expense do |form| %>
<header class="bg-primary text-white">
  <nav class="d-flex justify-content-between p-2 align-items-center text-reset">   
    <a href="<%= groups_path%>"><i class="fa-solid fa-circle-arrow-left h2 text-white pt-2"></i></a>
    <h2 class="m-0 p-0">New transaction</h2>
    <%= form.submit "Save", class: "btn btn-primary-outline text-white" %>
  </nav> 
</header>
  <% if @expense.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(expense.errors.count, "error") %> prohibited this entity from being saved:</h2>

      <ul>
        <% expense.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mt-3">
    <%= form.text_field :name, placeholder: "Name", class: "form-control rounded-0" %>
  </div>

  <div>
    <%= form.number_field :amount, placeholder: "Amount", class: "form-control rounded-0" %>
  </div>

  <div>
    <%= form.select :group_ids, @categories.collect {|cat| [cat.name, cat.id]}, { include_blank: false }, required: true, multiple: true, placeholder: "Select Categories", class: "form-control rounded-0" %>

  </div>
<% end %>